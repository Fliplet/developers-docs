extends layout

block page
  -
    if (error.status === 404) {
      message = 'Page not found'
      error.stack = 'The page has not been found. Get in contact with us at support@fliplet.com if you believe this is an error.'
    }

  .container
    h1=message
    if description
      p.text-muted=description
    else
      p.text-muted=error.status
    if error.stack
      hr
      .card
        .card-body
          pre=error.stack
    hr
    p
