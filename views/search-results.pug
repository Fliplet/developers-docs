extends layout

block content
  .jumbotron
    .container
      h1.display-3 Search results for <strong>#{query}</strong>
      p Here's what we've found searching our developers documentation for "#{query}".
  .container
    if results.length
      h3 #{results.length} result#{results.length === 1 ? '' : 's'} found
      ul
        each page in results
          li #{page.section}:&nbsp;
            a(href=page.menu.uri)=page.menu.title
    else
      p.alert.alert-warning Unfortunately, we haven't found any article or reference for your query. Please try again.
